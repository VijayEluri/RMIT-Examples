<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
        <session>
            <display-name>StatefulBeanSB</display-name>
            <ejb-name>StatefulBean</ejb-name>
            <home>vn.edu.rmit.examples.StatefulBeanRemoteHome</home>
            <remote>vn.edu.rmit.examples.StatefulBeanRemote</remote>
            <local-home>vn.edu.rmit.examples.StatefulBeanLocalHome</local-home>
            <local>vn.edu.rmit.examples.StatefulBeanLocal</local>
            <ejb-class>vn.edu.rmit.examples.StatefulBean</ejb-class>
            <session-type>Stateful</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <display-name>StatelessBeanSB</display-name>
            <ejb-name>StatelessBean</ejb-name>
            <home>vn.edu.rmit.examples.StatelessBeanRemoteHome</home>
            <remote>vn.edu.rmit.examples.StatelessBeanRemote</remote>
            <ejb-class>vn.edu.rmit.examples.StatelessBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>StatefulBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>StatelessBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
